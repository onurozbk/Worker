@model Worker.MvcUI.Models.CategoryListViewModel


<div class="list-group">
    @foreach (var item in Model.Categories)
    {
        var css = "list-group-item ";
        css = (Model.CurrentCategory == item.CategoryId) ? css + " active" : css;
        <a href="/product/index?category=@item.CategoryId" class="@css">@item.CategoryName</a>
    }
</div>